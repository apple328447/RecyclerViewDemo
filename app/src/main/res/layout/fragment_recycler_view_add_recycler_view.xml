    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="300dp"
            android:layout_marginStart="50dp">


        <com.example.recyclerview_demo.views.BubbleSpeech
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用BubbleLinearLayout" />

        </com.example.recyclerview_demo.views.BubbleSpeech>


        <!--    LinearLayout + TextView-->
        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="top|center"
                android:background="@drawable/bubble_speech">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用.9PNG"
                    android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/nine_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|center"
                android:layout_marginTop="50dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9PNG使用使用.9PNG使用9PNG使"
                    android:layout_gravity="center"/>
        </LinearLayout>

        <com.example.recyclerview_demo.views.BubbleSpeech
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:frameColor="#7AEB46">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9PNG使用使用.9PNG使用9PNG使PNG使用使用.9PNG使用9PNG使PNG使用使用.9PNG使用9PNG使"
                    android:layout_gravity="center"/>

        </com.example.recyclerview_demo.views.BubbleSpeech>

        <com.example.recyclerview_demo.views.BubbleSpeech
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:frameColor="#9C27B0"
                app:direction="right">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9PNG使用使用.9PNG使用9PNG使PNG使用使用.9PNG使用9PNG使PNG使用使用.9PNG使用9PNG使"
                    android:layout_gravity="center"/>

        </com.example.recyclerview_demo.views.BubbleSpeech>


        <!--  FrameLayout + ImgView + TextView-->
        <FrameLayout
                android:id="@+id/nine_txv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|center"
                android:layout_marginTop="50dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_bubble_chat_left"
                    android:scaleType="centerCrop"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#7AEB46"
                    android:text="使用.9PNG使用.9PNG使用.9PNG使用.9PNG"
                    android:layout_gravity="center"/>

        </FrameLayout>

    </LinearLayout>






