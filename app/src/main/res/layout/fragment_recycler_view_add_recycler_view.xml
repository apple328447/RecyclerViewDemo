<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.RecyclerViewAddRecyclerViewFragment">

    <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_radius_frame_blue"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_top_blue"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="遊戲"
                    android:textColor="@android:color/white" />

            <TextView
                    android:id="@+id/txv_zoom_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="V"
                    android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/content_body"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txv_A"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame_6dp_white_select_effect_left"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@drawable/textcolor_effect_blue"
                    android:textSize="16sp" />

            <TextView
                    android:id="@+id/txv_B"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame_6dp_white_select_effect_left"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="B"
                    android:textColor="@drawable/textcolor_effect_blue"
                    android:textSize="16sp" />

            <TextView
                    android:id="@+id/txv_C"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/frame_6dp_white_select_effect_left"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@drawable/textcolor_effect_blue"
                    android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>